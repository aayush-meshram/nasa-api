<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mButton"
        android:src="@drawable/date_button"
        android:layout_centerInParent="true"/>

    <ScrollView
        android:id="@+id/mScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layoutR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:id="@+id/Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/open_sans"
                android:text="Loading..."
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="35dp" />

            <ImageView
                android:id="@+id/mImage"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_below="@id/Title"
                android:padding="7dp" />


            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mImage"
                android:fontFamily="@font/open_sans"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/restart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/select_option_150x66"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/content"
                android:onClick="restartActivity"/>

        </RelativeLayout>

    </ScrollView>


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:src="@drawable/image_button"
        android:layout_below="@id/mButton"
        android:id="@+id/task2"
        android:layout_centerHorizontal="true"
        android:onClick="startSecondActivity"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/button_apod"
        android:layout_centerInParent="true"
        android:id="@+id/apod" />
</RelativeLayout>


